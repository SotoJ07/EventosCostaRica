@model List<EventosCostaRica.Models.Evento>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewData["Title"] = "Eventos Costa Rica - Home";
    var isAuthenticated = User.Identity.IsAuthenticated;
    var isAdmin = User.IsInRole("Admin");
}
<link rel="stylesheet" href="~/css/home-styles.css" />
<div class="container-fluid p-0">
    <!-- Modern Hero Section with Gradient -->
    <header class="position-relative overflow-hidden">
        <div class="hero-gradient"></div>
        <div class="container position-relative z-3">
            <div class="row align-items-center min-vh-100 py-5">
                <div class="col-lg-6 text-white">
                    <h1 class="display-2 fw-bold mb-4 animate-fade-in">
                        ¡Bienvenido a
                        <span class="text-gradient">Eventos Costa Rica!</span>
                    </h1>
                    <p class="lead fs-4 mb-4 animate-fade-in-delay">
                        Su lugar para <strong>TODO</strong> en eventos y experiencias únicas
                    </p>
                    <div class="d-flex gap-3 animate-fade-in-delay-2">
                        <a href="#tours" class="btn btn-primary btn-lg px-4 py-3 rounded-pill shadow-lg">
                            <i class="fas fa-map-marked-alt me-2"></i>Explorar Eventos
                        </a>
                    </div>
                </div>
                <div class="col-lg-6">
                    

<div id="carouselEventos" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
                            @foreach (var evento in Model.Select((value, index) => new { value, index }))
                            {
                                <div class="carousel-item @(evento.index == 0 ? "active" : "")">
                                    <img src="@evento.value.ImagenUrl" class="d-block w-100" alt="@evento.value.Nombre">
                                    <div class="carousel-caption d-none d-md-block">
                                        <h5>@evento.value.Nombre</h5>
                                        <p>@evento.value.Descripcion</p>
                                    </div>
                                </div>
                            }
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#carouselEventos" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Anterior</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselEventos" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Siguiente</span>
    </button>
</div>
                </div>
            </div>
        </div>
    </header>

    <!-- Stats Section -->
    <section class="py-5 bg-white">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-3 col-sm-6 mb-4">
                    <div class="stat-item">
                        <div class="stat-icon bg-primary text-white mb-3">
                            <i class="fas fa-calendar-check fa-2x"></i>
                        </div>
                        <h3 class="fw-bold text-primary">500+</h3>
                        <p class="text-muted">Eventos Realizados</p>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 mb-4">
                    <div class="stat-item">
                        <div class="stat-icon bg-success text-white mb-3">
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                        <h3 class="fw-bold text-success">10K+</h3>
                        <p class="text-muted">Clientes Satisfechos</p>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 mb-4">
                    <div class="stat-item">
                        <div class="stat-icon bg-warning text-white mb-3">
                            <i class="fas fa-map-marker-alt fa-2x"></i>
                        </div>
                        <h3 class="fw-bold text-warning">7</h3>
                        <p class="text-muted">Provincias</p>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 mb-4">
                    <div class="stat-item">
                        <div class="stat-icon bg-info text-white mb-3">
                            <i class="fas fa-star fa-2x"></i>
                        </div>
                        <h3 class="fw-bold text-info">4.9</h3>
                        <p class="text-muted">Rating Promedio</p>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <!-- Featured Tours Section -->
    <section id="tours" class="py-5 bg-light">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="display-5 fw-bold text-dark mb-3">Eventos Destacados</h2>
                <p class="lead text-muted">Descubre las maravillas de Costa Rica</p>
                <div class="divider mx-auto"></div>
            </div>

            <div class="row g-4">
                @foreach (var evento in Model)
                {
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm border-0">
                            <img src="@evento.ImagenUrl" class="card-img-top" alt="@evento.Nombre" style="height: 200px; object-fit: cover;">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title fw-bold">@evento.Nombre</h5>
                                <p class="card-text text-muted flex-grow-1">@evento.Descripcion</p>
                                <a href="@Url.Action("Detalle", "Eventos", new { id = evento.Id })"
                                   class="btn btn-primary mt-auto">
                                    Más información
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            @if (Model == null || !Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">No hay tours disponibles</h4>
                    <p class="text-muted">Pronto tendremos nuevas experiencias para ti</p>
                </div>
            }
        </div>
    </section>

    <!-- Admin Panel (only for Admins) -->
    @if (isAuthenticated && isAdmin)
    {
        <section class="py-5 bg-dark text-white">
            <div class="container">
                <div class="text-center mb-5">
                    <h2 class="display-6 fw-bold mb-3">Panel de Administración</h2>
                    <p class="lead text-light">Gestiona tu plataforma de eventos</p>
                </div>
                <div class="row g-4">
                    <div class="col-md-4">
                        <div class="card bg-transparent border-light admin-card">
                            <div class="card-body text-center p-4">
                                <div class="admin-icon mb-4">
                                    <i class="fas fa-calendar-alt fa-3x text-primary"></i>
                                </div>
                                <h5 class="card-title fw-bold mb-3">Gestionar Eventos</h5>
                                <p class="card-text text-light mb-4">Crear, editar o eliminar eventos de la plataforma</p>
                                <a href="@Url.Action("ManageEvents", "Admin")" class="btn btn-primary btn-lg rounded-pill">
                                    <i class="fas fa-cogs me-2"></i>Ir a Eventos
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-transparent border-light admin-card">
                            <div class="card-body text-center p-4">
                                <div class="admin-icon mb-4">
                                    <i class="fas fa-chart-line fa-3x text-success"></i>
                                </div>
                                <h5 class="card-title fw-bold mb-3">Reportes de Ventas</h5>
                                <p class="card-text text-light mb-4">Ver estadísticas y análisis de ventas</p>
                                <a href="@Url.Action("SalesReports", "Admin")" class="btn btn-success btn-lg rounded-pill">
                                    <i class="fas fa-chart-bar me-2"></i>Ver Reportes
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-transparent border-light admin-card">
                            <div class="card-body text-center p-4">
                                <div class="admin-icon mb-4">
                                    <i class="fas fa-users fa-3x text-warning"></i>
                                </div>
                                <h5 class="card-title fw-bold mb-3">Gestión de Usuarios</h5>
                                <p class="card-text text-light mb-4">Administrar roles y permisos de usuarios</p>
                                <a href="@Url.Action("Seguridad", "Home")" class="btn btn-warning btn-lg rounded-pill">
                                    <i class="fas fa-user-shield me-2"></i>Gestionar Usuarios
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }

    <!-- Newsletter Section -->
    <section class="py-5 bg-primary text-white">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h3 class="fw-bold mb-3">¡Mantente informado!</h3>
                    <p class="lead mb-0">Recibe las últimas noticias sobre los mejores eventos</p>
                </div>
                <div class="col-lg-6">
                    <form class="d-flex gap-2">
                        <input type="email" class="form-control form-control-lg rounded-pill" placeholder="Tu email">
                        <button type="submit" class="btn btn-light btn-lg rounded-pill px-4">
                            <i class="fas fa-paper-plane me-2"></i>Suscribirse
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>