@{
    ViewData["Title"] = "Registro de Usuario";
}

@if (TempData["RegistrationMessage"] != null)
{
    <div class="alert alert-danger text-center">
        @TempData["RegistrationMessage"]
    </div>
}

<div class="container">
    <div class="login-container">
        <div class="card login-card">
            <div class="light-effect"></div>
            <div class="login-header">
                <div class="dental-logo">
                    <img src="/imagenes/EventosCostaRicaLogo.png" class="d-block w-100 rounded" alt="Eventos Costa Rica Logo" style="max-height:350px;object-fit:contain;background:#fff;">
                </div>
                <h2>Crear Cuenta</h2>
                <p class="mb-0">Registro de nuevo usuario</p>
            </div>
            <div class="login-body">
                <form asp-action="Register" method="post">
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label class="form-label">Nombres</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                                <input type="text" name="firstName" class="form-control" placeholder="Ingrese sus nombres" required>
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <label class="form-label">Apellidos</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user-tag"></i></span>
                                <input type="text" name="lastName" class="form-control" placeholder="Ingrese sus apellidos" required>
                            </div>
                        </div>
                    </div>
                    <div class="mb-4">
                        <label class="form-label">Correo Electrónico</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            <input type="email" name="email" class="form-control" placeholder="Ingrese su correo" required>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label class="form-label">Contraseña</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                <input type="password" name="password" class="form-control" placeholder="Cree una contraseña" required>
                                <button class="btn btn-outline-secondary" type="button">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <label class="form-label">Confirmar Contraseña</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                <input type="password" name="confirmPassword" class="form-control" placeholder="Repita la contraseña" required>
                            </div>
                        </div>
                    </div>
                    <div class="form-check mb-4">
                        <input class="form-check-input" type="checkbox" name="acceptTerms" value="true" required>
                        <label class="form-check-label">
                            Acepto los <a href="#" class="forgot-password">términos y condiciones</a>
                        </label>
                    </div>
                    <button type="submit" class="btn btn-dental btn-block w-100 mb-3">
                        <i class="fas fa-user-plus me-2"></i> Registrar Usuario
                    </button>
                    <div class="text-center pt-3">
                        <p class="mb-0">¿Ya tienes una cuenta? <a asp-action="Login" class="forgot-password">Inicia sesión aquí</a></p>
                    </div>
                </form>
            </div>
        </div>
        <div class="text-center mt-4">
            <p class="text-muted small">© @DateTime.Now.Year Eventos Costa Rica</p>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Solo para el efecto visual de mostrar/ocultar contraseña
        $(document).ready(function () {
            $('[type="button"]').click(function () {
                const input = $(this).closest('.input-group').find('input');
                const icon = $(this).find('i');
                if (input.attr('type') === 'password') {
                    input.attr('type', 'text');
                    icon.removeClass('fa-eye').addClass('fa-eye-slash');
                } else {
                    input.attr('type', 'password');
                    icon.removeClass('fa-eye-slash').addClass('fa-eye');
                }
            });
        });
    </script>
}