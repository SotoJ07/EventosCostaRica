@model List<AsientoViewModel>
@{
    ViewData["Title"] = "Seleccionar Asientos";
    var eventoId = ViewBag.EventoId;
    var asientosPorFila = Model.GroupBy(a => a.Fila);
}

<h2 class="text-center mb-4">Selecciona tus asientos</h2>

<form asp-action="ConfirmarAsientos" method="post">
    <input type="hidden" name="eventoId" value="@eventoId" />

    @foreach (var fila in asientosPorFila)
    {
        <div class="mb-3">
            <h5>Fila @fila.Key</h5>
            <div class="asientos-grid">
                @foreach (var asiento in fila)
                {
                    var clase = asiento.Ocupado ? "ocupado" : "disponible";

                    <div class="asiento @clase">
                        @if (!asiento.Ocupado)
                        {
                            <input type="checkbox" name="asientosSeleccionados" value="@asiento.Id" id="asiento_@asiento.Id" />
                            <label for="asiento_@asiento.Id">@asiento.Numero</label>
                        }
                        else
                        {
                            <span>@asiento.Numero</span>
                        }
                    </div>
                }
            </div>
        </div>
    }

    <div class="text-center mt-4">
        <button type="submit" class="btn btn-primary">Confirmar selección</button>
    </div>
</form>

<style>
    .asientos-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(60px, 1fr));
        gap: 10px;
        max-width: 800px;
        margin: 0 auto;
    }

    .asiento {
        border-radius: 8px;
        padding: 10px;
        text-align: center;
        font-weight: bold;
        cursor: pointer;
        position: relative;
        border: 2px solid transparent;
    }

        .asiento input[type="checkbox"] {
            display: none;
        }

        .asiento.disponible label {
            cursor: pointer;
            display: block;
            background-color: #e0f7fa;
            border: 2px solid #007bff;
            border-radius: 5px;
            padding: 5px;
        }

        .asiento.disponible input[type="checkbox"]:checked + label {
            background-color: #007bff;
            color: white;
        }

        .asiento.ocupado {
            background-color: #ccc;
            color: #666;
            pointer-events: none;
        }
</style>