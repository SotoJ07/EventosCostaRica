@model EventosCostaRica.Models.Evento

<h2>@ViewContext.RouteData.Values["action"] Evento</h2>

<form asp-action="@ViewContext.RouteData.Values["action"]" method="post" enctype="multipart/form-data">
    <div class="form-group mb-2">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="Descripcion"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Lugar"></label>
        <input asp-for="Lugar" class="form-control" />
        <input type="hidden" asp-for="ImagenUrl" />
    </div>

    <div class="row mb-2">
        <div class="col">
            <label asp-for="FechaInicio"></label>
            <input asp-for="FechaInicio" type="datetime-local" class="form-control"
                   value="@Model.FechaInicio.ToString("yyyy-MM-ddTHH:mm")" />
        </div>
        <div class="col">
            <label asp-for="FechaFin"></label>
            <input asp-for="FechaFin" type="datetime-local" class="form-control"
                   value="@Model.FechaFin.ToString("yyyy-MM-ddTHH:mm")" />
        </div>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Precio"></label>
        <input asp-for="Precio" type="number" step="0.01" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>Subir Imagen</label>
        <input type="file" name="imagen" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>