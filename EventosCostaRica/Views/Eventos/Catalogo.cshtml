@model List<EventosCostaRica.Models.Evento>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Catálogo de Eventos";
}

<link rel="stylesheet" href="~/css/catalogo-styles.css" />

<div class="events-hero">
    <div class="container">
        <div class="text-center">
            <h1 class="display-4 fw-bold events-title mb-3">
                <i class="fas fa-calendar-alt me-3"></i>Catálogo de Eventos
            </h1>
            <p class="lead text-white-50">Descubre experiencias increíbles que te esperan</p>
        </div>
    </div>
</div>

<div class="container">
    <div class="filters-section">
        <div class="row align-items-center">
            <div class="col-md-6 text-end">
                <span class="text-muted">
                    <i class="fas fa-ticket-alt me-2"></i>
                    Tenemos @Model.Count() próximos eventos
                </span>
            </div>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-5">
            @foreach (var evento in Model)
            {
                var disponible = evento.Capacidad > 0;
                var esLimitado = evento.Capacidad > 0 && evento.Capacidad <= 10;

                <div class="col">
                    <div class="card event-card h-100">
                        <div class="position-relative overflow-hidden">
                            @if (!string.IsNullOrEmpty(evento.ImagenUrl))
                            {
                                <img src="@evento.ImagenUrl" class="card-img-top event-card-img" alt="@evento.Nombre" />
                            }
                            else
                            {
                                <div class="event-card-img d-flex align-items-center justify-content-center bg-light">
                                    <i class="fas fa-image fa-3x text-muted"></i>
                                </div>
                            }

                            <div class="position-absolute top-0 end-0 m-3">
                                <span class="badge bg-dark bg-opacity-75 fs-6 px-3 py-2">
                                    ₡@evento.Precio.ToString("N0")
                                </span>
                            </div>
                        </div>

                        <div class="card-body event-card-body">
                            <h5 class="event-card-title">@evento.Nombre</h5>

                            <div class="event-detail">
                                <i class="fas fa-calendar"></i>
                                <span>@evento.FechaInicio.ToString("dddd, dd 'de' MMMM yyyy")</span>
                            </div>

                            <div class="event-detail">
                                <i class="fas fa-clock"></i>
                                <span>@evento.FechaInicio.ToString("hh:mm tt")</span>
                            </div>

                            <div class="event-detail">
                                <i class="fas fa-map-marker-alt"></i>
                                <span>@evento.Lugar</span>
                            </div>

                            <div class="event-detail">
                                <i class="fas fa-users"></i>
                                <span>@evento.Capacidad espacios disponibles</span>
                            </div>

                            <div class="mt-3">
                                @if (!disponible)
                                {
                                    <span class="availability-badge sold-out">
                                        <i class="fas fa-times-circle me-1"></i>Entradas Agotadas
                                    </span>
                                }
                                else if (esLimitado)
                                {
                                    <span class="availability-badge limited">
                                        <i class="fas fa-exclamation-triangle me-1"></i>¡Últimas Entradas!
                                    </span>
                                }
                                else
                                {
                                    <span class="availability-badge available">
                                        <i class="fas fa-check-circle me-1"></i>Entradas Disponibles
                                    </span>
                                }
                            </div>
                        </div>

                        <div class="card-footer card-footer-modern">
                            @if (disponible)
                            {
                                <a href="@Url.Action("SeleccionarAsientos", "Eventos", new { eventoId = evento.Id })"
                                   class="btn event-btn event-btn-primary">
                                    <i class="fas fa-shopping-cart me-2"></i>Comprar Entradas
                                </a>
                            }
                            else
                            {
                                <button class="btn event-btn event-btn-secondary" disabled>
                                    <i class="fas fa-ban me-2"></i>Agotado
                                </button>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="no-events">
            <i class="fas fa-calendar-times"></i>
            <h3>No hay eventos disponibles</h3>
            <p class="lead">Vuelve pronto para descubrir nuevas experiencias increíbles</p>
            <a href="@Url.Action("Index", "Home")" class="btn event-btn event-btn-primary mt-3">
                <i class="fas fa-home me-2"></i>Volver al Inicio
            </a>
        </div>
    }
</div>